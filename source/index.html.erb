---
pageable: true
per_page: 10
---

<ul class="post-list">
  <% page_articles.each_with_index do |article, i| %>
    <li class="post-list-item">
    	<div class="post-list-category <%= article.data.category %>">
    		<%= article.data.category %>
    	</div>
      <%= link_to article.title, article, {:class=>"post-list-title"} %>

      <aside class="post-list-date"><%= article.date.strftime('%b %e') %></aside>
    </li>
  <% end %>
</ul>

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
